{
  "name": "vfile-to-eslint",
  "version": "1.0.0",
  "description": "Convert VFiles to ESLint formatter compatible output",
  "license": "MIT",
  "keywords": [
    "vfile",
    "virtual",
    "file",
    "eslint",
    "formatter",
    "reporter",
    "convert",
    "remark",
    "lint"
  ],
  "repository": "vfile/vfile-to-eslint",
  "bugs": "https://github.com/vfile/vfile-to-eslint/issues",
  "author": "Sindre Sorhus <sindresorhus@gmail.com> (https://sindresorhus.com)",
  "contributors": [
    "Sindre Sorhus <sindresorhus@gmail.com> (https://sindresorhus.com)",
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {},
  "devDependencies": {
    "ava": "^0.25.0",
    "nyc": "^13.1.0",
    "prettier": "^1.14.3",
    "remark-cli": "^6.0.0",
    "remark-preset-wooorm": "^4.0.0",
    "vfile": "^3.0.0",
    "xo": "^0.23.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "test-api": "ava",
    "test-coverage": "nyc --reporter lcov ava test.js",
    "test": "npm run format && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
